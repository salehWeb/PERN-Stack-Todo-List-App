generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role0 {
  ADMIN
  USER
}

enum Role1 {
  CUSTOMLOGIN
  NORMALLOGIN
}

model User {
  id                String   @id @default(uuid())
  email             String   @unique
  created_at        DateTime @default(now())
  image             String?
  name              String
  authorizationRoll Role0    @default(USER)
  Post              Post[]
  password          String?  @unique
  role              Role1    @default(CUSTOMLOGIN)
}

model Post {
  id         String   @id @default(uuid())
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  title      String
  content    String
  published  Boolean  @default(false)
  author     User     @relation(fields: [authorId], references: [id])
  image      String?
  tags       String[]
  authorId   String
}
